---
let { blog } = Astro.props;
let descripLimit = 150;
---

<div class="border-[1px] border-zinc-200 dark:border-zinc-700 transition-all hover:border-none hover:shadow-md dark:shadow-none hover:dark:bg-white/5 rounded-lg p-4 w-80 h-full">
    <a class="flex-box flex-col" href={blog.url}>
        <div>
            <img class="object-contain w-80 mr-4 rounded-lg" src={blog.frontmatter.img} />
        </div>
        <div>
        <h1 class="text-2xl mt-4 dark:text-white/75">
            {blog.frontmatter.title}
        </h1>
        <p class="mt-2 text-zinc-500 dark:text-zinc-400">
            {blog.frontmatter.description.length <= descripLimit ? blog.frontmatter.description: blog.frontmatter.description.slice(0, descripLimit)+"..." }
        </p>
        </div>
    </a>
</div>